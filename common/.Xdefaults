Xcursor.size: 10

URxvt*foreground: white
URxvt*background: rgba:0111/0111/0200/D200

URxvt.transparent:   true
URxvt.shading:       10

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

! Fonts
URxvt.allow_bold:           true
!URxvt*font:                xft:Monospace:pixelsize=16
!URxvt*boldFont:            xft:Monospace:style=bold:pixelsize=16
URxvt*font:                 xft:Inconsolata\ for\ Powerline:style=Semibold:pixelsize=22:antialias=true:hinting=slight
URxvt*boldFont:             xft:Inconsolata\ for\ Powerline:style=bold:pixelsize=22:antialias=true:hinting=slight
!URxvt*font:                xft:Inconsolata\ for\ Powerline
!URxvt*boldFont:            xft:Inconsolata\ for\ Powerline

! Fix font space
URxvt*letterSpace:          -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.matcher.button:       1
URxvt.urlLauncher:          xdg-open
URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select
URxvt.url-select.launcher:  xdg-open
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search
URxvt.keysym.M-c:           perl:clipboard:copy
URxvt.keysym.M-v:           perl:clipboard:paste

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

URxvt.urgentOnBell:         true
 
!! black dark/light
*color0: #212121
