let g:switch_mapping = "-"

map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>

set makeprg=[[\ -f\ Makefile\ ]]\ &&\ make\ \\\|\\\|\ make\ -C\ ..
set clipboard=unnamedplus

function Haste() range
  echo system('echo '.shellescape(join(getline(a:firstline, a:lastline), "\n")).'| haste | xsel -ib')
endfunction
