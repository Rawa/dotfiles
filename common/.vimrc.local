au! BufRead,BufNewFile *.repy  setfiletype repy

let g:airline_powerline_fonts = 1
let g:switch_mapping = "-"

map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>

function Haste() range
  echo system('echo '.shellescape(join(getline(a:firstline, a:lastline), "\n")).'| haste | xsel -ib')
endfunction
