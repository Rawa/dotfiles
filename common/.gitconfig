# Local/private config goes in the include
[include]
  path = ~/.gitconfig.local
  path = ~/.gitconfig.aliases

[core]
	excludesfile = /Users/rawa/.gitignore
  editor = nvim

[push]
  default = current

[pull]
  default = current
  rebase = true

[diff]
  mnemonicprefix = true
  tool = vimdiff

[difftool]
  prompt = false

[branch]
  autosetuprebase = always

[apply]
  whitespace = nowarn

[mergetool]
  keepBackup = false

[rebase]
	autosquash = true

