bindsym XF86AudioRaiseVolume  exec --no-startup-id amixer -q sset Master 1%+ -M && pkill -RTMIN+10 i3blocks 
#bindsym XF86AudioNext         exec --no-startup-id 
#bindsym XF86AudioPrev         exec --no-startup-id 
bindsym XF86KbdBrightnessDown exec --no-startup-id kbdlight down
bindsym XF86KbdBrightnessUp   exec --no-startup-id kbdlight up
bindsym XF86MonBrightnessUp   exec --no-startup-id xbacklight +9
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -9

