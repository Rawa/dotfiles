URxvt.termName:             rxvt-256color
Xcursor.size:               10

URxvt*foreground:           white
URxvt*background:           rgba:0111/0111/0200/D200

URxvt.transparent:          true
URxvt.shading:              10

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

! Fonts
URxvt*font:                 xft:Inconsolata for Powerline:style=Medium:pixelsize=23:antialias=true:hinting=slight
URxvt*boldFont:             xft:Inconsolata for Powerline:style=Medium:pixelsize=23:antialias=true:hinting=slight

URxvt.keysym.C-Up:          perl:font-size:increase
URxvt.keysym.C-Down:        perl:font-size:decrease
URxvt.keysym.C-S-Up:        perl:font-size:incglobal
URxvt.keysym.C-S-Down:      perl:font-size:decglobal

! Fix font spacing
URxvt*letterSpace:          -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.matcher.button:       1
URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select
URxvt.url-select.launcher:  xdg-open
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search
URxvt.keysym.M-c:           perl:clipboard:copy
URxvt.keysym.M-v:           perl:clipboard:paste
URxvt.keysym.M-C-v:         perl:clipboard:paste_escaped

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! Bell
URxvt.urgentOnBell:         true

! Black dark/light
*color0:  #212121
*color8:  #424242

! Red dark/light
*color1:  #b71c1c
*color9:  #ef5350

! Green dark/light
*color2:  #1b5e20
*color10: #66bb6a

! Yellow dark/light
*color3:  #f57f17
*color11: #ffee58

! Blue dark/light
*color4:  #0d47a1
*color12: #42a5f5

! Magenta dark/light
*color5:  #4a148c
*color13: #ab47bc

! Cyan dark/light
*color6:  #006064
*color14: #26c6da

! White dark/light
*color7:  #f5f5f5
*color15: #fafafa

! Display settings
Xft.dpi: 127
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
